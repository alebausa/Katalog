<div>
  <form id="logout-form" action="/logout" method="POST">
    <button>Logout</button>
  </form>
</div>



<p>My Posts</p>
{{#if user}}
  <h2>Welcome, {{ user.name }}!</h2>
  <p>This is your profile page {{user.name}}!</p>
  <h3>Recent Posts</h3>
  {{#each user.posts}}
  <p>{{this.title}}</p>
{{/each}}
  
  <button>
    <a href="/user-profile">Reload the page</a>
  </button>
  <a href="/userProfile/{{user.id}}/edit">Edit</a>
  <button>
    <a href="/userProfile/create">Create Post</a>
  </button>
{{else}}
  <p>Still not logged in, sorry!</p>
{{/if}}
