<main class="main">
  <h1 class="hello">Edit your post</h1>
  <div class="main__form-div">
    <form class="main__edit-post-form" action="/userProfile/{{post._id}}/edit" method="POST">
      <ul class="main__form-ul">
          <li class="main__form-row">
            <label for="title-input">Title:</label>
            <input type="text" name="title" id="title-input" value="{{post.title}}" />
          </li>
          <li class="main__form-row">
            <label for="description-input">Description:</label>
            <input type="text" name="description" id="description-input" value="{{post.description}}" /> 
          </li>
          <li class="main__form-row">
            <label for="theme-input">Theme:</label>
            <input type="text" name="theme" id="theme-input" value="{{post.theme}}" />
          </li>
          <li class="main__form-btn">
            <button class="btn btn__cta" type="submit">Update</button>
          </li>
      </ul>
    </form>
  </div>
  <form class="main__edit-delete" action="/userProfile/{{post.id}}/delete" method="POST">
        <button class="btn">Delete Post</button>
  </form>
</main>
