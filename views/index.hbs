<main class="main">
  <h1>K·A·T·A·L·O·G</h1>
  <div class="main__home-div">
    <form class="main__home-div-form" action="/" method="POST">

      <input class="main__home-div-input" type="email" name="email" id="email-input" placeholder="Email" />

      <input class="main__home-div-input" type="password" name="password" id="password-input" placeholder="Password"/>

      <button class="btn btn__cta" type="submit">Log in</button>
      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
    <a class="main__home-div-a"  href="/sign-up">Sign up</a>
  </div>
</main>
