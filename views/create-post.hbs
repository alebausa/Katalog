<main class="main">
  <h1>Create a post!</h1>
  <div class="main__form-div">
    <form action="/userProfile/create" method="POST" enctype="multipart/form-data">
      <ul class="main__form-ul">
        <li class="main__form-row">
          <label for="title-input">Title:</label>
          <input type="text" name="title" id="title-input" />
        </li>
        <li class="main__form-row">
          <label for="description-input">Description:</label>
          <input type="text" name="description" id="description-input" />
        </li>
        <li class="main__form-row">
          <label for="theme-input">Theme:</label>
          <input type="text" name="theme" id="theme-input" />
        </li>
        <li class="main__form-row">
          <label for="image">Image:</label>
          <input type="file" name="image" id="image" />
        </li>
        <li class="main__form-btn">
          <button class="btn btn__cta" type="submit">Create!</button>
        </li>
      </ul>
    </form>
  </div>
</main>
